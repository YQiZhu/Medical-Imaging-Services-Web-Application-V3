@model FIT5032_PortfolioV3.Models.SendEmailViewModel

@{
    ViewBag.Title = "Send Email";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Send Email</h2>

@using (Html.BeginForm("SendEmail", "MedImages", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
<dl class="dl-horizontal">
    <dt>
        @Html.DisplayNameFor(model => model.ToEmail)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.ToEmail)
    </dd>

</dl>

    <div class="form-group">
        @Html.LabelFor(model => model.Subject, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Subject, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Contents, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.Contents, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Contents, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.AttachmentPath, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.AttachmentPath, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.AttachmentPath, "", new { @class = "text-danger" })
        </div>
        <p></p>
        <img class="img-thumbnail" src="@Url.Content("~/Uploads/"+Model.AttachmentPath)" style="max-width: 100px; max-height: 100px;" />
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Send Email</button>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
