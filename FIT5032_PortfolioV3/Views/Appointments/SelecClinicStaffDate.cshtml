@model FIT5032_PortfolioV3.Models.Appointments

@{
    ViewBag.Title = "SelecClinicStaffDate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>SelecClinicStaffDate</h2>

@using (Html.BeginForm("SelectStaffAndClinic", "Appointment", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h4>Appointments</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.ClinicId, "ClinicId", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ClinicId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ClinicId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.StaffUserId, "StaffUserId", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("StaffUserId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.StaffUserId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Date, new { @id = "datepicker", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
            </div>
        </div>

        <input type="submit" value="Next" />

    </div>}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
            var tomorrow = new Date();
            tomorrow.setDate(tomorrow.getDate() + 1);
            $("#datepicker").datepicker({
                format: 'dd-mm-yyyy',
                startDate: tomorrow
            });
    </script>